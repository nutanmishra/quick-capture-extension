{
  "manifest_version": 3,
  "name": "Quick Capture",
  "version": "1.0.0",
  "description": "Capture beautiful screenshots with ease",
  "author": "Nutan Mishra",
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "scripting",
    "downloads",
    "debugger"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Quick Capture",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "html2canvas.min.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}